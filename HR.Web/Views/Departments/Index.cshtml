@model IEnumerable<HR.Domain.Employees.Department>
@{
    ViewData["Title"] = "Departments";
}
<div class="d-flex align-items-center justify-content-between">
    <h2>Departments</h2>
    <a asp-action="Create" class="btn btn-primary">+ New Department</a>
</div>

@if (TempData["OK"] != null)
{
    <div class="alert alert-success mt-3">@TempData["OK"]</div>
}

<form method="get" class="row g-2 my-3">
    <div class="col-md-4">
        <input name="q" value="@ViewBag.Query" class="form-control" placeholder="Search by name" />
    </div>
    <div class="col-md-2 d-grid">
        <button class="btn btn-outline-primary">Filter</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Active</th>
            <th style="width:180px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">View</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
