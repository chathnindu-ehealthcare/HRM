@model HR.Domain.Employees.Employee
@{
    ViewData["Title"] = "Delete Employee";
    string OrDash(string? v) => string.IsNullOrWhiteSpace(v) ? "-" : v!;
    string YesNo(bool v) => v ? "Yes" : "No";
}

<h2>Delete Employee</h2>
<hr />

<div class="alert alert-warning">
    Are you sure you want to delete this employee? <strong>This action cannot be undone.</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Full Name</dt>
    <dd class="col-sm-9">@Model.FullName</dd>

    <dt class="col-sm-3">NIC</dt>
    <dd class="col-sm-9">@OrDash(Model.NIC)</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@OrDash(Model.Email)</dd>

    <dt class="col-sm-3">Phone</dt>
    <dd class="col-sm-9">@OrDash(Model.Phone)</dd>

    <dt class="col-sm-3">Department</dt>
    <dd class="col-sm-9">@OrDash(Model.Department?.Name)</dd>

    <dt class="col-sm-3">Designation</dt>
    <dd class="col-sm-9">@OrDash(Model.Designation?.Name)</dd>

    <dt class="col-sm-3">Employee Category</dt>
    <dd class="col-sm-9">@OrDash(Model.EmployeeCategory?.Name)</dd>

    <dt class="col-sm-3">Date of Joining</dt>
    <dd class="col-sm-9">@Model.DateOfJoining.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-3">Active</dt>
    <dd class="col-sm-9">@YesNo(Model.IsActive)</dd>
</dl>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">Yes, delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
