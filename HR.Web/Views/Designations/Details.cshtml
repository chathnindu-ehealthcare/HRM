@model HR.Domain.Employees.Designation
@{
    ViewData["Title"] = "Designation Details";
    string YesNo(bool v) => v ? "Yes" : "No";
    int? empCount = Model.Employees != null ? Model.Employees.Count : (int?)null;
}
<h2>Designation Details</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Active</dt>
    <dd class="col-sm-10">@YesNo(Model.IsActive)</dd>

    @* Optional: show how many employees use this designation if loaded *@
    @if (empCount.HasValue)
    {
        <dt class="col-sm-2">Employees</dt>
        <dd class="col-sm-10">@empCount.Value</dd>
    }
</dl>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
