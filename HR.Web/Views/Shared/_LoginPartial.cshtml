@using Microsoft.AspNetCore.Identity
@using HR.Domain.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item"><span class="nav-link text-light">Hello, @User.Identity?.Name</span></li>
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/" method="post" class="d-inline">
                <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item"><a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item"><a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    }
</ul>
