@page
@model HR.Web.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}
<h1 class="mb-3">Log in</h1>
<form method="post">
    <div class="mb-3">
        <label asp-for="Input.UserNameOrEmail" class="form-label"></label>
        <input asp-for="Input.UserNameOrEmail" class="form-control" />
        <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Input.RememberMe" class="form-check-input" />
        <label asp-for="Input.RememberMe" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Log in</button>
</form>
<partial name="_ValidationScriptsPartial" />
